{
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES2015",
    "outDir": "./lib",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./lib/types",
    "sourceMap": true,
    "skipLibCheck": true,
    "removeComments": false,
    "strict": true,
    "noImplicitReturns": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "test",
    "lib"
  ]
}