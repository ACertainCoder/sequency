{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "removeComments": false,
    "strict": true,
    "noImplicitReturns": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "test",
    "lib"
  ]
}